<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Preference.SimpleMenuPreference.PopupMenu" parent="android:Widget">
        <item name="android:popupBackground">@drawable/simple_menu_background</item>
        <item name="listMarginHorizontal">@dimen/simple_menu_margin</item>
        <item name="listMarginVertical">8dp</item>
        <item name="listItemPadding">16dp</item>
        <item name="menuElevation">8dp</item>

        <item name="increment">@dimen/simple_menu_unit</item>
        <item name="maxIncrements">@integer/simple_menu_max_units</item>
    </style>

    <style name="ThemeOverlay.Preference.SimpleMenuPreference.PopupMenu" parent="android:ThemeOverlay">
        <item name="popupBackgroundRadius">4dp</item>
    </style>

    <style name="Animation.Preference.SimpleMenuCenter" parent="android:Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>


    <style name="Widget.Ripple.Material3.SwitchBar" parent="android:Widget">
        <item name="shapeAppearance">?shapeAppearanceCornerExtraLarge</item>
        <item name="backgroundTint">@color/material_switch_bar_background_m3</item>
        <item name="android:textAppearance">?textAppearanceBodyLarge</item>
        <item name="circleRevealEnabled">false</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.Ripple.Material2.SwitchBar" parent="android:Widget">
        <item name="shapeAppearance">@null</item>
        <item name="backgroundTint">@color/material_switch_bar_background_m2</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="circleRevealEnabled">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ShapeAppearance.Ripple.Material2.FullComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Ripple.Material2.AvatarImageView.Circle" parent="android:Widget">
        <item name="android:maxWidth">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Ripple.Material2.FullComponent</item>
    </style>

    <style name="Widget.Ripple.Material2.MaterialTooltip" parent="android:Widget" >
        <item name="tooltipMargin">8dp</item>
        <item name="tooltipPaddingHorizontal">16dp</item>
        <item name="tooltipPaddingVertical">8dp</item>
<!--        <item name="tooltipTextColor">?attr/tooltipForegroundColor</item>-->
        <item name="tooltipTextAppearance">@style/TextAppearance.MaterialComponents.Tooltip</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.Tooltip</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
<!--        <item name="android:maxWidth">256dp</item>-->
<!--        <item name="android:minWidth">32dp</item>-->
<!--        <item name="android:minHeight">32dp</item>-->
    </style>

    <!--    <style name="Widget.Ripple.Material2.SwitchBar.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">-->
    <!--        <item name="trackTint">@color/material_switch_bar_switch_track_tint_m2</item>-->
    <!--    </style>-->

    <!-- concerrox.android.ui.ripple -->
    <style name="Widget.Ripple.Material2.TipView.Information" parent="android:Widget">
        <item name="backgroundTint">@color/ripple_tip_view_background_m2</item>
        <item name="titleTextColor">?colorPrimary</item>
        <item name="textColor">?colorPrimary</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
    </style>


























    <style name="Widget.Ripple.Material2.ListItem" parent="android:Widget">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>

        <item name="keyline">72dp</item>

        <item name="primaryTextAppearance">?textAppearanceSubtitle1</item>
        <item name="secondaryTextAppearance">?textAppearanceBody2</item>

        <item name="twoLineOverlineTextBaselineToTopHeight">24dp</item>
        <item name="twoLinePrimaryTextBaselineToTopHeight">28dp</item>
        <item name="twoLinePrimaryTextBaselineToOverlineTextBaselineHeight">20dp</item>
        <item name="twoLineSecondaryTextBaselineToPrimaryTextBaselineHeight">20dp</item>
        <item name="twoLineCenterAligned">false</item>

        <item name="threeLineOverlineTextBaselineToTopHeight">28dp</item>
        <item name="threeLinePrimaryTextBaselineToTopHeight">28dp</item>
        <item name="threeLinePrimaryTextBaselineToOverlineTextBaselineHeight">20dp</item>
        <item name="threeLineSecondaryTextBaselineToPrimaryTextBaselineHeight">20dp</item>
        <item name="threeLineCenterAligned">false</item>
    </style>

    <style name="Widget.Ripple.Material2.IconListItem" parent="Widget.Ripple.Material2.ListItem">
        <item name="forceKeyline">true</item>
    </style>

</resources>